<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nero.jxc.dao.UserDao">

    <select id="getUserInfoByUserNameAndPassword" resultType="org.nero.jxc.entity.User">
        SELECT * from user where username ='${username}' and password = '${password}';
    </select>


    <select id="getUserByToken" resultType="org.nero.jxc.entity.User">
        SELECT * from user where token ='${token}';
    </select>
</mapper>